<%= form_with(model: [@hotel, booking], local: true) do |form| %>

    <% if booking.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

            <ul>
                <% booking.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div>
        <%= form.label :代表者指名 %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :代表者連絡先 %>
        <%= form.text_field :emailaddress %>
    </div>

    <div>
        <%= form.label :チェックイン日 %>
        <%= form.date_select :checkin %>
    </div>

    <div>
        <%= form.label :チェックアウト日 %>
        <%= form.date_select :checkout %>
    </div>

    <div>
        <%= form.label :人数 %>
        <%= form.select :numberofpeople, [0,1,2,3,4,5] %>
    </div>

    <%= form.hidden_field :hotel_id %>

  

    <div class="actions">
        <%= form.submit %>
    </div>
    
<% end %>
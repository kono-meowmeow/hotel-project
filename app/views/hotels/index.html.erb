
<div class="container">
    <h1>ホテルの一覧</h1>
    <hr>

   
    
    <%= render 'hotel_search_form' %>

        

    


    <hr>

    <div class="row">
        <% @hotels.each do |hotel| %>
                <div class="col-md-3 mb-20"> 
                    <div class="card h-100">    
                        <div class="card-img-top h-40">
                            <%= link_to image_tag(hotel.image_url, class: "top-image"), hotel_path(hotel) if hotel.image.present?%>
                        </div>
                        <div class="card-body h-52">
                            <h5 class="card-title"><%= link_to hotel.name, hotel_path(hotel) %></h5>
                            <small class="card-prefecture"><%= link_to hotel.prefecture.name, prefecture_path(hotel.prefecture)%></small><hr>
                            <p class="card-text"><span class=><%= hotel.body.truncate(40) %></span></p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">
                                <%= link_to'レビューを見る', hotel_reviews_path(hotel) %>
                            </small>
                        </div>
                    </div>
                </div>
        <% end %>
    </div>
</div>


